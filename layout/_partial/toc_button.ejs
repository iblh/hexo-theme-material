    <ul class="post-toc-wrap mdl-menu mdl-menu--bottom-left mdl-js-menu mdl-js-ripple-effect" for="post-toc-trigger-btn" style="max-height:80vh; overflow-y:scroll;">
        <%- toc(page.content, {
            class: 'post-toc',
            list_number: false,
            style: 'max-height:80vh; overflow-y:scroll;'
